{
    "include": [
        "src/**/*.ts",
        "types/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "logs",
        "build",
        "config"
    ],
    "compilerOptions": {
        "removeComments": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "target": "es5",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "allowJs": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "sourceMap": true,
        "pretty": true,
        "baseUrl": ".",
        "paths": {
            "@@/*": ["./*"],
            "@/*": ["./src/*"]
        }
    }
}
